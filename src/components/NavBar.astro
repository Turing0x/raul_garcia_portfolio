---
const links = [
  { name: "Home", href: "/", title: "Go to home page" },
  { name: "Projects", href: "#projects", title: "View my projects" },
  { name: "About", href: "#about", title: "Learn more about me" },
  { name: "Contact", href: "#contact", title: "Get in touch" },
];
---

<div class="nav-bar">
  <ul class="nav-bar-list">
    {
      links.map((link) => (
        <li class="nav-bar-item" title={link.title}>
          <a href={link.href}>{link.name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .nav-bar-list {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 0;
    background: #213740;
    background: -webkit-linear-gradient(to right, #1c4353, #002433);
    background: linear-gradient(to right, #1c4353, #002433);
    color: #e2e2e2;
  }

  .nav-bar-item {
    display: inline-block;
    white-space: pre;
    margin-right: 24px;
    font-size: 20px;
    padding-bottom: 12px;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    position: relative;
  }

  .nav-bar-item::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #f80;
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  .nav-bar-item:hover::after {
    transform: scaleX(1);
  }

  .nav-bar-item.active {
    color: var(--border-hover-color);
  }

  .nav-bar-item:hover {
    color: var(--border-hover-color);
  }

  .nav-bar {
    position: relative;
  }

  .nav-bar-list {
    position: relative;
    gap: 0;
  }

  @media (max-width: 768px) {
    .nav-bar {
      display: none;
    }
  }

  @media (min-width: 769px) {
    .menu-icon {
      display: none;
    }
  }
</style>

<script>
  const currentPath = window.location.pathname;

  const navItems = document.querySelectorAll(".nav-bar-item");

  const scrollToSection = (sectionId: string) => {
    const section = document.getElementById(sectionId);
    if (section) {
      section.scrollIntoView({ behavior: "smooth" });
    }
  };

  navItems.forEach((item) => {
    const link = item.querySelector("a");
    if (link && link.getAttribute("href") === currentPath) {
      item.classList.add("active");
    }

    item.addEventListener("click", () => {
      scrollToSection(link!.getAttribute("href")!);
    });
  });
</script>
