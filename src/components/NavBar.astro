---
const links = [
  { name: "Home", href: "/", title: "Go to home page" },
  { name: "Projects", href: "#projects", title: "View my projects" },
  { name: "About", href: "#about", title: "Learn more about me" },
  { name: "Contact", href: "#contact", title: "Get in touch" },
  // { name: "My Notes", href: "/notes", title: "Read my technical notes" },
];
---

<div class="nav-bar">
  <ul class="nav-bar-list">
    {
      links.map((link) => (
        <li class="nav-bar-item" title={link.title}>
          <a href={link.href}>{link.name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .nav-bar-list {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 0;
    background: #213740;
    background: -webkit-linear-gradient(to right, #1c4353, #002433);
    background: linear-gradient(to right, #1c4353, #002433);
    color: #fff;
  }

  .nav-bar-item {
    font-family: "ABold";
    display: inline-block;
    white-space: pre;
    margin-right: 24px;
    font-size: 20px;
    padding-bottom: 12px;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.3s ease;
    cursor: pointer;
  }

  .nav-bar-item.active {
    color: var(--border-hover-color);
  }

  .nav-bar-item:hover {
    color: var(--border-hover-color);
  }

  .nav-bar {
    position: relative;
  }

  .nav-bar-list {
    position: relative;
    gap: 0;
  }

  @media (max-width: 768px) {
    .nav-bar-list {
      position: fixed;
      top: 0;
      right: -100%;
      flex-direction: column;
      width: 70%;
      height: 100vh;
      padding: 80px 0;
      transition: right 0.3s ease;
      z-index: 100;
    }

    .nav-bar-list.active {
      right: 0;
    }

    .nav-bar-item {
      margin: 16px 0;
      font-size: 18px;
    }

    .menu-icon {
      display: block;
      position: fixed;
      top: 20px;
      right: 20px;
      width: 32px;
      height: 32px;
      cursor: pointer;
      z-index: 200;
      background: url("/icons/menu.svg") no-repeat center;
      background-size: contain;
      filter: invert(1);
    }

    .menu-icon.active {
      background: url("/icons/menu.svg") no-repeat center;
      transform: rotate(90deg);
    }
  }

  @media (min-width: 769px) {
    .menu-icon {
      display: none;
    }
  }
</style>

<script>
  const currentPath = window.location.pathname;

  const navItems = document.querySelectorAll(".nav-bar-item");

  const scrollToSection = (sectionId: string) => {
    const section = document.getElementById(sectionId);
    if (section) {
      section.scrollIntoView({ behavior: "smooth" });
    }
  };

  navItems.forEach((item) => {
    const link = item.querySelector("a");
    if (link && link.getAttribute("href") === currentPath) {
      scrollToSection(link.getAttribute("href")!);
      item.classList.add("active");
    }
  });
</script>
