---
const skills = {
  frontend: [
    { name: "Angular (Senior)", isSenior: true },
    { name: "React", isSenior: false },
    { name: "TypeScript", isSenior: false },
    { name: "Flutter/Dart", isSenior: false },
    { name: "HTML/CSS", isSenior: false },
    { name: "Tailwind", isSenior: false },
  ],
  backend: [
    { name: "Node.js/Express (Senior)", isSenior: true },
    { name: "MongoDB (Senior)", isSenior: true },
    { name: "Socket.io (Senior)", isSenior: true },
    { name: "Spring Boot", isSenior: false },
    { name: "MySQL", isSenior: false },
  ],
  tools: [
    { name: "Git/GitHub", isSenior: false },
    { name: "Figma", isSenior: false },
    { name: "Postman", isSenior: false },
    { name: "System Architecture", isSenior: false },
    { name: "Team Leadership", isSenior: true },
    { name: "Project Management", isSenior: false },
  ],
};

const attributes = [
  "Strong analytical and problem-solving skills developed through complex project management",
  "Effective team leadership and communication abilities",
  "Dedication to continuous learning and staying current with technology trends",
  "Ability to balance technical excellence with business objectives",
];
---

<section id="about" class="about-section">
  <div class="about-container">
    <h2 class="heading-1">About Me</h2>

    <div class="about-content">
      <div class="personal-info">
        <p class="description">
          I am a <span class="yellow-text">Computer Science Engineering</span>
          graduate with a strong academic record (GPA 4.28/5) and extensive industry
          experience as a <span class="yellow-text"
            >senior full-stack developer</span
          >. I specialize in crafting efficient, functional, and visually
          appealing applications, focusing on <span class="yellow-text"
            >user experience, interface design, and database optimization</span
          >. My blend of theoretical knowledge and practical expertise allows me
          to deliver high-quality technological solutions with strategic
          precision.
        </p>
      </div>

      <div class="expertise">
        <h3 class="heading-3">Core Expertise</h3>
        <div class="skills-grid">
          <div class="skill-category">
            <h4 class="heading-4">Frontend</h4>
            <ul>
              {
                skills.frontend.map((skill) => (
                  <li class={skill.isSenior ? "with-border" : ""}>
                    {skill.name}
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="skill-category">
            <h4 class="heading-4">Backend</h4>
            <ul>
              {
                skills.backend.map((skill) => (
                  <li class={skill.isSenior ? "with-border" : ""}>
                    {skill.name}
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="skill-category">
            <h4 class="heading-4">Tools & Others</h4>
            <ul>
              {
                skills.tools.map((skill) => (
                  <li class={skill.isSenior ? "with-border" : ""}>
                    {skill.name}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>

      <div class="key-attributes">
        <h3 class="heading-3">Key Professional Attributes</h3>
        <div class="attributes-grid">
          {
            attributes.map((attribute) => (
              <div class="attribute-item">
                <p>{attribute}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    background: #1d1d1d;
    background: -webkit-linear-gradient(to right, #1d1d1d, #37291a);
    background: linear-gradient(to right, #1d1d1d, #37291a);

    padding: 8rem 15rem;
    color: #fff;
  }

  .about-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .personal-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .description {
    font-size: 20px;
    line-height: 1.6;
    max-width: 900px;
    text-align: justify;
  }

  .expertise {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .skill-category {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .skill-category h4 {
    color: #f80;
    font-family: "space-grotesk-variable";
    font-weight: 700;
  }

  .skill-category ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skill-category li {
    font-size: 18px;
    line-height: 1.4;
  }

  .with-border {
    border-bottom: 1px solid #f80;
    width: fit-content;
  }

  .key-attributes {
    margin-top: 4rem;
  }

  .attributes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .attribute-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .attribute-item:hover {
    transform: translateY(-5px);
  }

  .attribute-item p {
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 6rem 2rem;
    }

    .attributes-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .attribute-item {
      padding: 1.25rem;
    }

    .attribute-item p {
      font-size: 15px;
    }

    .key-attributes {
      margin-top: 3rem;
    }

    .description {
      text-align: left;
    }
  }

  @media (max-width: 480px) {
    .about-section {
      padding: 4rem 2rem;
    }

    .skill-category li {
      font-size: 16px;
    }

    .attribute-item {
      padding: 1rem;
    }

    .attribute-item p {
      font-size: 14px;
    }

    .key-attributes {
      margin-top: 2.5rem;
    }
  }
</style>
