---
const links = [
  {
    icon: "cv",
    name: "Curriculum",
    url: "https://drive.google.com/file/d/1T0UxSTK2M2VB0qRPimJdS_xcYdxqRDCF/view?usp=sharing",
  },
  {
    icon: "github",
    name: "GitHub",
    url: "https://github.com/Turing0x",
  },
  {
    icon: "linkedin",
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/raul-garc%C3%ADa-630467116/",
  },
  {
    icon: "protonmail",
    name: "Email",
    url: "mailto:rauligf97@proton.me",
  },
];
---

<div class="my-links">
  {
    links.map((link) => (
      <a href={link.url} target="_blank">
        <img src={`/icons/${link.icon}.svg`} alt={link.name} />
        <span>{link.name}</span>
      </a>
    ))
  }
</div>

<style>
  .my-links {
    display: flex;
    gap: 1rem;
  }

  .my-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 10px 30px;
    font-size: 24px;
    gap: 1rem;
    transition: border-color 0.3s ease;
  }

  .my-links a img {
    width: 26px;
    height: 26px;
  }

  .my-links a:hover {
    border-color: #f80;
  }

  .my-links a.cv-link {
    background-color: #f80;
    color: #1d4d62;
  }

  @media (max-width: 768px) {
    .my-links {
      flex-direction: column;
      align-items: stretch;
      margin-top: 20px;
      gap: 0.75rem;
    }

    .my-links a {
      padding: 8px 20px;
      font-size: 20px;
      line-height: 28px;
    }

    .my-links a img {
      width: 22px;
      height: 22px;
    }
  }

  @media (max-width: 480px) {
    .my-links a {
      padding: 6px 16px;
      font-size: 18px;
      line-height: 24px;
    }

    .my-links a img {
      width: 20px;
      height: 20px;
    }
  }
</style>

<script>
  const cvLink = document.querySelectorAll(".my-links a")[0];
  cvLink.classList.add("cv-link");
</script>
