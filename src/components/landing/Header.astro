---
import MyLinks from "./MyLinks.astro";
import { useTranslations } from "../../i18n/utils";
import type { Lang } from "../../types/lang";

const currentLang = Astro.currentLocale as Lang;

const transtaledLabels = useTranslations(currentLang);
---

<header class="landing-header">
  <section class="main-info-landing">
    <div class="my-name heading-3">ðŸ‘‹ RaÃºl GarcÃ­a FernÃ¡ndez</div>
    <div class="heading-1">
      {
        transtaledLabels("header.role")
          .split("/")
          .map((text) =>
            !text.includes("*") ? (
              text
            ) : (
              <>
                <span class="yellow-text">{text.replaceAll("*", "")}</span>
              </>
            )
          )
      }
    </div>

    <div class="my-description">
      {
        transtaledLabels("header.description")
          .split("/")
          .map((text) =>
            !text.includes("*") ? (
              text
            ) : (
              <>
                <span class="yellow-text">{text.replaceAll("*", "")}</span>
              </>
            )
          )
      }
    </div>
  </section>
  <MyLinks />

  <style>
    .landing-header {
      background: #213740;
      background: -webkit-linear-gradient(to right, #1c4353, #002433);
      background: linear-gradient(to right, #1c4353, #002433);
      padding: 0 15rem 8rem 15rem;
      display: flex;
      flex-direction: column;
      height: 85dvh;
      justify-content: space-between;
    }

    .main-info-landing {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .my-name {
      background-color: #1e1e1e;
      padding: 6px 18px;
      display: flex;
      width: fit-content;
      align-items: center;
      font-weight: 700;
      line-height: normal;
    }

    .my-description {
      font-size: 26px;
      line-height: 34px;
      min-width: 640px;
      text-align: justify;
    }

    @media (max-width: 1024px) {
      .landing-header {
        padding: 2rem 8rem 6rem 8rem;
        height: auto;
        min-height: 85dvh;
      }

      .my-description {
        min-width: unset;
        font-size: 20px;
        line-height: 30px;
      }
    }

    @media (max-width: 768px) {
      .landing-header {
        padding: 2rem 4rem 4rem 4rem;
      }

      .my-description {
        font-size: 18px;
        line-height: 28px;
      }
    }

    @media (max-width: 480px) {
      .landing-header {
        padding: 1.5rem 2rem 3rem 2rem;
      }

      .my-name {
        padding: 4px 12px;
      }

      .my-description {
        font-size: 16px;
        line-height: 26px;
      }

      .main-info-landing {
        gap: 1.5rem;
      }
    }
  </style>
</header>
