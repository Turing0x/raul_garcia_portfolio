---
import { useTranslations } from "../i18n/utils";
import type { Lang } from "../types/lang";

const currentLang = Astro.currentLocale as Lang;
const transtaledLabels = useTranslations(currentLang);
---

<footer id="contact" class="footer">
  <div class="footer-content">
    <div class="footer-left">
      <h2 class="heading-1">{transtaledLabels("footer.title")}</h2>
      <p class="subtitle">
        {transtaledLabels("footer.description")}
      </p>
    </div>

    <form class="contact-form">
      <div class="form-group">
        <input type="text" placeholder={transtaledLabels("footer.form.name")} />
        <input
          type="email"
          placeholder={transtaledLabels("footer.form.email")}
        />
      </div>

      <textarea placeholder={transtaledLabels("footer.form.message")}
      ></textarea>

      <button class="submit-btn">
        <span>{transtaledLabels("footer.form.submit")}</span>
        <img src="/icons/arrow-right.svg" alt="Submit" />
      </button>
    </form>
  </div>
</footer>

<style>
  .footer {
    background: #213740;
    background: -webkit-linear-gradient(to right, #293033, #554839);
    background: linear-gradient(to right, #293033, #554839);
    padding: 10rem 15rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    gap: 4rem;
  }

  .footer-left {
    flex: 1;
  }

  .footer-left h2 {
    color: #f80;
  }

  .subtitle {
    margin-top: 2rem;
    font-size: 18px;
    line-height: 1.5;
    color: #e2e2e2;
    max-width: 400px;
  }

  .contact-form {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    gap: 1rem;
  }

  input,
  textarea {
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1.5rem;
    width: 100%;
    background: transparent;
    color: #e2e2e2;
  }

  input::placeholder,
  textarea::placeholder {
    color: #e2e2e2;
  }

  textarea {
    min-height: 120px;
    resize: vertical;
  }

  .submit-btn {
    -webkit-tap-highlight-color: transparent;
    align-items: center;
    background: #e2e2e2;
    border-radius: 4px;
    border: none;
    color: #000;
    cursor: pointer;
    display: inline-flex;
    font-size: 2rem;
    gap: 0.5rem;
    letter-spacing: 0.1em;
    overflow: hidden;
    padding: 1rem 2rem;
    position: relative;
    text-transform: uppercase;
    user-select: none;
    width: fit-content;
  }

  .submit-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--border-hover-color);
    transition: left 0.2s ease-in-out;
    z-index: 0;
  }

  .submit-btn:hover::before {
    left: 0;
  }

  .submit-btn:hover {
    color: #1d4d62;
  }

  .submit-btn > * {
    position: relative;
    z-index: 1;
  }

  .submit-btn img {
    width: 3rem;
    height: 3rem;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 4rem 2rem;
    }

    .footer-content {
      flex-direction: column;
      padding: 4rem 2rem;
      gap: 3rem;
    }

    .footer-left {
      text-align: center;
      width: 100%;
    }

    .contact-form {
      width: 100%;
    }

    .form-group {
      flex-direction: column;
      gap: 1rem;
    }

    .form-group input {
      width: 100%;
    }

    .submit-btn {
      width: 100%;
      justify-content: center;
      font-size: 1.6rem;
      padding: 0.8rem 1.6rem;
    }

    .submit-btn img {
      width: 2.4rem;
      height: 2.4rem;
    }
  }
</style>
